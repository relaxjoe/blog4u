<div class="row d-flex justify-content-center">
  <div class="col-auto">
    <h2 class="text-center w-100">Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4 d-flex justify-content-center">
  <div class="col-md-6 ">
    <h3 class="text-center">Create a New Blog:</h3>
<br>
<br>
    <form class="form new-project-form">
      <div class="form-group">
        <label class="px-5" for="project-name">post name:</label>
        <input class="form-input px-5" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label class="px-5" for="project-funding">comments: </label>
        <input class="form-input px-5" type="text" id="project-funding" name="project-funding" />
      </div>
      <div class="form-group">
        <label class="px-5" for="project-desc">description:</label>
        <textarea class="form-input px-5" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/profile.js"></script>
